{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "chva/*",
        "src/*"
      ]
    },
    "target": "es5",
    //模块采用import语法且不作转换，转换工作交给gulp任务中的webpakc2
    "module": "es2015",
    //npm模式加载
    "moduleResolution": "node",
    //对于没有export的库进行兼容
    "allowSyntheticDefaultImports": true,
    //开启修饰器模式
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es2015"
    ]
  }
}
